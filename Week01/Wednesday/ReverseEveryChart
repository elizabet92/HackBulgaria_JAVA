
public class ReverseEveryChart {

	public static String reverseEveryChar(String arg){
		String reversed = "";
		String temp="";
		reversed = "";
		for(int i = 0;i<arg.length();i++)
		{
			if(arg.charAt(i)==' '){reversed += temp+" "; temp = "";}
			else temp = arg.charAt(i)+temp;
			
		}
		reversed += temp;
    return reversed;
}

	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println(reverseEveryChar("hello world"));
	}

}
